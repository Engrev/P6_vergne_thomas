{# templates/reset_password/reset.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Réinitialiser mon mot de passe{% endblock %}

{% block body %}
    <section id="reset" class="container">
        <h1 class="h3">Réinitialiser votre mot de passe</h1>

        <div id="resetForm">
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.password.first) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.password.second) }}
                </div>

                <div class="form-group">
                    <button class="btn btn-theme bg-theme">Réinitialiser mon mot de passe</button>
                </div>
            {{ form_end(form) }}
        </div>
    </section>

{% endblock %}
