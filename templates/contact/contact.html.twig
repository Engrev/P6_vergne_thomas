{# templates/contact/contact.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nous contacter{% endblock %}

{% block body %}
    <section id="contact" class="container">
        <h1>Nous contacter</h1>

        <div id="contactForm">
            {{ form_start(form) }}
                <div class="form-row mb-4 mb-md-5">
                    <div class="col-12 col-md-4 mb-4 mb-md-0">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="col-12 col-md-4 mb-4 mb-md-0">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="col-12 col-md-4">
                        {{ form_row(form.subject) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_row(form.message) }}
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-theme btn-block bg-theme">Envoyer</button>
                </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}